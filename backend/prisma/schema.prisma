generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                  @id @unique @default(uuid())
  email                String                  @unique
  name                 String                  @unique                 
  password             String                   
  image                String?          
  cart                 Cart[]
  adress               Address[]
  order                Order[]
}

model Cart {
  id                  String                 @id @unique @default(uuid())
  productId           String
  product             Product                @relation(fields: [productId] , references: [id])
  userId              String
  user                User                   @relation(fields: [userId] , references: [id])
}

model Product {
  id               String                     @id @unique @default(uuid())
  name             String
  size             sizesOption 
  price            Int                        
  image            String
  description      String
  bestsellor       Boolean                   @default(false)
  category         categoryType              @default(all)
  cart             Cart[]
  order            Order[]
}



model Address {
id                 String                  @id @unique @default(uuid())
housenumber        String
contact            String    
street             String
city               String
landmark           String         
paymentMode        paymentoption
userId             String
user               User                     @relation(fields: [userId], references: [id])
}

model Order {
id                 String                   @id @unique @default(uuid())
productId          String                    
userId             String
product            Product                  @relation(fields: [productId], references: [id])
user               User                     @relation(fields: [userId], references: [id])
paymentMode        paymentoption
payment            paymentStatus            
}

enum categoryType {
  all
  topwear
  bottomwear
  footwear
}

enum sizesOption {
  small
  large
  medium
  extralarge
  doubleextralarge
}

enum paymentoption {
  cashondelivery
  online
}

enum paymentStatus{
  completed 
  failure 
  notyet
}


